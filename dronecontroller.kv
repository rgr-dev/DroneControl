#:import ImageButton dronemodules.widgets.ImageButton

ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'menu'
        manager: 'screen_manager'
    SettingsView:
        id: settingsview_screen
        name: 'settingsview'
        manager: 'screen_manager'

<MenuScreen>:
    GridLayout:
        cols: 4
        ImageButton:
            custom: 'rocket'
            source: './src/img/rocket_128.png'
            on_release: root.my_callback('rocket Button pressed')
        ImageButton:
            custom: 'pin'
            source: './src/img/pin_128.png'
            on_release: root.my_callback('pin Button pressed')
        ImageButton:
            custom: 'postbox'
            source: './src/img/postbox_128.png'
            on_release: root.my_callback('postbox Button pressed')
        ImageButton:
            custom: 'setting'
            source: './src/img/setting_128.png'
            on_release:
                root.my_callback('settings Button pressed')
                app.root.current = 'settingsview'
                app.root.transition.direction = 'left'

<settingsview>: