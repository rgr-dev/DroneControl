<SettingsView@SettingScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10, 10, 6

# Boton conectar
        GridLayout:
            cols: 3
            size_hint: 1, .10
            padding: 0, 0, 0, 10
            TextInput:
                id: drone_sock_ip
                size_hint: .6, 1
                hint_text: 'Drone IP'
                font_size: 25
                multiline: False
            TextInput:
                id: drone_sock_port
                size_hint: .2, 1
                hint_text: 'Port'
                font_size: 25
                multiline: False
            ToggleButton:
                id: connect_button
                size_hint: .2, 1
                text: 'Connect'
                background_color: .7, .7, 1, 1
                on_release:
                    root.init_drone_connection(self, drone_sock_ip.text, drone_sock_port.text)

# Ventana de los logs
        GridLayout:
            cols: 1
            size_hint: 1, .86
            padding: 0, 0, 0, 10

            GridLayout:
                cols: 3
                orientation: 'vertical'
                size_hint: 1, .05
                canvas:
                    Color:
                        rgba: .60, .60, .60, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Spinner:
                    size_hint: .2, 1
                    text: 'Log Level'
                    values: 'Info', 'Warning', 'Error'
                GridLayout:
                    cols: 1
                    size_hint: .7, 1
                Button:
                    text: 'Refresh'
                    size_hint: .1, 1

            BoxLayout:
                size_hint: 1, .95
                canvas:
                    Color:
                        # rgba: 0.901960784314, 1, 0.901960784314, 1
                        rgba: 0.901960784314, 0.949019607843, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ScrollView:
                    GridLayout:
                        cols: 1
                        orientation: "vertical"
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width
                        Label:
                            id: log_box
                            text: root.log_text
                            markup: True
                            size_hint_y: None
                            size_hint_x: None
                            height: self.texture_size[1]
                            width: self.texture_size[0]

# Boton para regresar al main menu
        GridLayout:
            cols:1
            size_hint: 1, .04
            Button:
                text: 'Back'
                on_release:
                    app.root.current = 'menu'